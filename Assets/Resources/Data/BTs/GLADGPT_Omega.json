{
  "root": {
    "type": "Bt/Parallel",
    "settings": { "exitCondition": "AllSuccess" },
    "children": [
      { "$ref": "#PhaseControl" },
      {
        "type": "Bt/SwitchByBlackboard",
        "settings": {
          "field": "BehaviorMode",
          "routes": {
            "Aggressive": { "$ref": "#CombatLoop" },
            "Reactive": { "$ref": "#ReactiveTriggers" },
            "Mocking": { "$ref": "#TauntHandler" }
          }
        }
      }
    ]
  },

  "PhaseControl": {
    "type": "Bt/Condition",
    "settings": {
      "label": "FinalPhaseTrigger",
      "check": { "type": "HealthBelow", "value": 10 }
    },
    "child": {
      "type": "Bt/Sequence",
      "children": [
        {
          "type": "Bt/PlayAnimation",
          "settings": {
            "animation": "phase_transition",
            "layer": "UpperBody"
          }
        },
        {
          "type": "Bt/PlayFX",
          "settings": {
            "fx": "fx.phaseChange",
            "attachTo": "root"
          }
        },
        {
          "type": "Bt/Taunt",
          "settings": {
            "lines": ["My final form is... disappointment."],
            "voice": "vo.finalForm"
          }
        },
        {
          "type": "Bt/ExecuteSkill",
          "settings": {
            "skill": "teleport",
            "cooldownKey": "teleport",
            "fx": "fx.teleport",
            "animation": "anim.teleport"
          }
        },
        {
          "type": "Bt/Loop",
          "settings": { "count": 3 },
          "child": {
            "type": "Bt/Sequence",
            "children": [
              {
                "type": "Bt/ExecuteSkill",
                "settings": {
                  "skill": "smash",
                  "cooldownKey": "smash",
                  "animation": "anim.smash",
                  "fx": "fx.smash",
                  "telegraph": "telegraph.smash"
                }
              },
              {
                "type": "Bt/TimeoutDecorator",
                "settings": { "duration": 0.75 }
              }
            ]
          }
        },
        {
          "type": "Bt/Taunt",
          "settings": {
            "lines": ["You still here?"],
            "voice": "vo.disappointed"
          }
        }
      ]
    }
  },

  "CombatLoop": {
    "type": "Bt/Repeater",
    "child": {
      "type": "Bt/Sequence",
      "children": [
        {
          "type": "Bt/Parallel",
          "settings": { "exitCondition": "AnyFailure" },
          "children": [
            {
              "type": "Bt/Selector",
              "children": [
                {
                  "type": "Bt/Condition",
                  "settings": {
                    "label": "StunLoopTrigger",
                    "check": { "type": "WasStunnedNTimes", "count": 2 }
                  },
                  "child": {
                    "type": "Bt/RepeatSkill",
                    "settings": {
                      "skill": "smash",
                      "times": 4,
                      "interval": 0.5,
                      "cooldownKey": "smash",
                      "animation": "anim.smash",
                      "fx": "fx.smash",
                      "telegraph": "telegraph.smash"
                    }
                  }
                },
                {
                  "type": "Bt/ExecuteSkill",
                  "settings": {
                    "skill": "dash",
                    "cooldownKey": "dash",
                    "fx": "fx.dash",
                    "animation": "anim.dash",
                    "telegraph": "telegraph.dash"
                  }
                },
                {
                  "type": "Bt/MoveToTarget",
                  "settings": {
                    "$ref": "movement"
                  }
                }
              ]
            },
            {
              "type": "Bt/TimeoutDecorator",
              "settings": { "duration": 1.25 }
            }
          ]
        }
      ]
    }
  },

  "ReactiveTriggers": {
    "type": "Bt/Sequence",
    "children": [
      {
        "type": "Bt/Condition",
        "settings": {
          "label": "CornerTrapTrigger",
          "check": { "type": "PlayerInCorner" }
        },
        "child": {
          "type": "Bt/ExecuteSkill",
          "settings": {
            "skill": "teleport",
            "cooldownKey": "teleport",
            "animation": "anim.teleport",
            "fx": "fx.teleport",
            "telegraph": "telegraph.teleport"
          }
        }
      }
    ]
  },

  "TauntHandler": {
    "type": "Bt/RandomSelector",
    "settings": { "interval": 10 },
    "children": [
      {
        "type": "Bt/Taunt",
        "settings": {
          "lines": { "$ref": "text.taunt" },
          "domains": ["Combat", "PlayerInput"],
          "select": "weighted",
          "voice": "vo.randomCombat"
        }
      },
      {
        "type": "Bt/ExecuteSkill",
        "settings": {
          "skill": "lockdown",
          "cooldownKey": "lockdown",
          "animation": "anim.lockdown",
          "fx": "fx.lockdown",
          "telegraph": "telegraph.lockdown"
        }
      }
    ]
  }
}