{
  "root": {
    "type": "Bt/Repeater",
	
    "children": [
      {
        "type": "Bt/Sequence",
        "children": [
          {
            "type": "Bt/Parallel",
            "config": { "exitCondition": "FirstSuccess" },
            "children": [
              {
                "type": "Bt/TimeoutDecorator",
                "config": {
                  "label": "MoveTimeout",
                  "duration": { "$ref": "timing.moveDuration" }
                }
              },
              {
                "type": "Bt/MoveToTarget",
                "config": { "$ref": "movement" }
              }
            ]
          },
          {
            "type": "Bt/Pause",
            "config": {
			  "label": "PauseAfterMove",
              "duration": { "$ref": "timing.pauseDuration" },
			  "domains": ["Domain/Movement"]
			}
          }
        ]
      }
    ]
  }
}
